@page "/recensioni"
@using GameStore.Application.DTOs
@using GameStore.Application.Services
@using GameStore.Domain.DTOs.Common
@using GameStore.Application.Common
@inject IRecensioneService RecensioneService
@inject NavigationManager Navigation

<PageTitle>Gestione Recensioni</PageTitle>

<h3>Gestione Recensioni</h3>

<div class="mb-3">
    <button class="btn btn-primary" @onclick="AggiungiRecensione">
        <i class="bi bi-plus-circle"></i> Aggiungi Recensione
    </button>
</div>

@if (isLoading)
{
    <div class="text-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Caricamento...</span>
        </div>
    </div>
}
else if (errorMessage != null)
{
    <div class="alert alert-danger" role="alert">
        @errorMessage
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Utente</th>
                    <th>Gioco</th>
                    <th>Punteggio</th>
                    <th>Titolo</th>
                    <th>Data Recensione</th>
                    <th>Verificata</th>
                    <th>Azioni</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var recensione in recensioni?.Items ?? new List<RecensioneDto>())
                {
                    <tr>
                        <td>@recensione.UtenteUsername</td>
                        <td>@recensione.GiocoTitolo</td>
                        <td>
                            <div class="d-flex">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <i class="bi bi-star@(i <= recensione.Punteggio ? "-fill text-warning" : "")"></i>
                                }
                            </div>
                        </td>
                        <td>@recensione.Titolo</td>
                        <td>@recensione.DataRecensione.ToString("dd/MM/yyyy")</td>
                        <td>
                            @if (recensione.IsRecensioneVerificata)
                            {
                                <span class="badge bg-success">SÃ¬</span>
                            }
                            else
                            {
                                <span class="badge bg-warning">No</span>
                            }
                        </td>
                        <td>
                            <button class="btn btn-sm btn-outline-primary me-1" @onclick="() => ModificaRecensione(recensione.Id)">
                                <i class="bi bi-pencil"></i>
                            </button>
                            <button class="btn btn-sm btn-outline-danger" @onclick="() => CancellaRecensione(recensione.Id)">
                                <i class="bi bi-trash"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (recensioni != null && recensioni.TotalPages > 1)
    {
        <nav aria-label="Paginazione">
            <ul class="pagination">
                @for (int i = 1; i <= recensioni.TotalPages; i++)
                {
                    <li class="page-item @(i == recensioni.PageNumber ? "active" : "")">
                        <a class="page-link" href="#" @onclick="() => CaricaRecensioni(i)" @onclick:preventDefault="true">@i</a>
                    </li>
                }
            </ul>
        </nav>
    }
}

@code {
    private PagedResult<RecensioneDto>? recensioni;
    private bool isLoading = true;
    private string? errorMessage;
    private int currentPage = 1;
    private const int pageSize = 20;

    protected override async Task OnInitializedAsync()
    {
        await CaricaRecensioni(1);
    }

    private async Task CaricaRecensioni(int page)
    {
        try
        {
            isLoading = true;
            errorMessage = null;
            currentPage = page;

            var request = new FilterRequest
            {
                PageNumber = page,
                PageSize = pageSize
            };

            var result = await RecensioneService.GetPagedAsync(request);
            if (result.IsSuccess)
            {
                recensioni = result.Value;
            }
            else
            {
                errorMessage = result.Error.Message;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Errore durante il caricamento: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void AggiungiRecensione()
    {
        Navigation.NavigateTo("/recensioni/nuovo");
    }

    private void ModificaRecensione(Guid id)
    {
        Navigation.NavigateTo($"/recensioni/modifica/{id}");
    }

    private async Task CancellaRecensione(Guid id)
    {
        if (await ConfirmDelete())
        {
            try
            {
                var result = await RecensioneService.DeleteAsync(id);
                if (result.IsSuccess)
                {
                    await CaricaRecensioni(currentPage);
                }
                else
                {
                    errorMessage = result.Error.Message;
                }
            }
            catch (Exception ex)
            {
                errorMessage = $"Errore durante la cancellazione: {ex.Message}";
            }
        }
    }

    private async Task<bool> ConfirmDelete()
    {
        // Implementazione semplificata - in un'app reale usare un modal
        return await Task.FromResult(true);
    }
}
