@page "/"
@using GameStore.Application.Services
@using GameStore.Application.DTOs
@inject IStatisticheService StatisticheService

<PageTitle>Dashboard - GameStore AI</PageTitle>

<div class="apple-card mb-4">
    <div class="text-center">
        <h1 class="mb-3">
            <span class="oi oi-cpu" aria-hidden="true"></span> GameStore AI Dashboard
        </h1>
        <p class="text-muted fs-5 mb-0">Benvenuto nella piattaforma di gestione GameStore potenziata dall'Intelligenza Artificiale</p>
    </div>
</div>

@if (isLoading)
{
    <div class="text-center">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Caricamento statistiche...</span>
        </div>
        <p class="mt-2">Caricamento statistiche...</p>
    </div>
}
else if (errorMessage != null)
{
    <div class="alert alert-danger" role="alert">
        @errorMessage
    </div>
}
else if (statistiche != null)
{
    <!-- Statistiche Cards -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="apple-card stat-card bg-primary text-white">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title text-uppercase mb-2" style="font-size: 12px; font-weight: 600; opacity: 0.9;">Utenti Totali</h6>
                        <h2 class="mb-0 fw-bold">@statistiche.TotaleUtenti</h2>
                    </div>
                    <div class="stat-icon">
                        <span class="oi oi-people" aria-hidden="true" style="font-size: 2rem; opacity: 0.8;"></span>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 mb-3">
            <div class="apple-card stat-card bg-success text-white">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title text-uppercase mb-2" style="font-size: 12px; font-weight: 600; opacity: 0.9;">Giochi in Catalogo</h6>
                        <h2 class="mb-0 fw-bold">@statistiche.TotaleGiochi</h2>
                    </div>
                    <div class="stat-icon">
                        <span class="oi oi-monitor" aria-hidden="true" style="font-size: 2rem; opacity: 0.8;"></span>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 mb-3">
            <div class="apple-card stat-card bg-info text-white">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title text-uppercase mb-2" style="font-size: 12px; font-weight: 600; opacity: 0.9;">Acquisti Totali</h6>
                        <h2 class="mb-0 fw-bold">@statistiche.TotaleAcquisti</h2>
                    </div>
                    <div class="stat-icon">
                        <span class="oi oi-cart" aria-hidden="true" style="font-size: 2rem; opacity: 0.8;"></span>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 mb-3">
            <div class="apple-card stat-card bg-warning text-white">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title text-uppercase mb-2" style="font-size: 12px; font-weight: 600; opacity: 0.9;">Recensioni</h6>
                        <h2 class="mb-0 fw-bold">@statistiche.TotaleRecensioni</h2>
                    </div>
                    <div class="stat-icon">
                        <span class="oi oi-star" aria-hidden="true" style="font-size: 2rem; opacity: 0.8;"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistiche Dettagliate -->
    <div class="row mb-4">
        <div class="col-md-6 mb-3">
            <div class="apple-card">
                <div class="d-flex align-items-center mb-3">
                    <span class="oi oi-dollar me-2" aria-hidden="true" style="font-size: 1.5rem; color: var(--apple-green);"></span>
                    <h5 class="mb-0 fw-semibold">Vendite</h5>
                </div>
                <h2 class="text-success fw-bold mb-2">€@statistiche.ValoreVendite.ToString("N2")</h2>
                <p class="text-muted mb-0">Valore totale delle vendite</p>
            </div>
        </div>
        
        <div class="col-md-6 mb-3">
            <div class="apple-card">
                <div class="d-flex align-items-center mb-3">
                    <span class="oi oi-star me-2" aria-hidden="true" style="font-size: 1.5rem; color: var(--apple-yellow);"></span>
                    <h5 class="mb-0 fw-semibold">Rating Medio</h5>
                </div>
                <h2 class="text-warning fw-bold mb-2">@statistiche.MediaPunteggioRecensioni.ToString("F1")/5.0</h2>
                <p class="text-muted mb-0">Punteggio medio delle recensioni</p>
            </div>
        </div>
    </div>

    <!-- Attività Recente -->
    <div class="row">
        <div class="col-md-6 mb-3">
            <div class="apple-card">
                <div class="d-flex align-items-center mb-3">
                    <span class="oi oi-clock me-2" aria-hidden="true" style="font-size: 1.5rem; color: var(--apple-blue);"></span>
                    <h5 class="mb-0 fw-semibold">Attività Ultimo Mese</h5>
                </div>
                <div class="row">
                    <div class="col-6">
                        <h4 class="text-primary fw-bold mb-1">@statistiche.AcquistiUltimoMese</h4>
                        <small class="text-muted">Nuovi Acquisti</small>
                    </div>
                    <div class="col-6">
                        <h4 class="text-warning fw-bold mb-1">@statistiche.RecensioniUltimoMese</h4>
                        <small class="text-muted">Nuove Recensioni</small>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-6 mb-3">
            <div class="apple-card">
                <div class="d-flex align-items-center mb-3">
                    <span class="oi oi-cpu me-2" aria-hidden="true" style="font-size: 1.5rem; color: var(--apple-purple);"></span>
                    <h5 class="mb-0 fw-semibold">AI Assistant</h5>
                </div>
                <ul class="list-unstyled mb-0">
                    <li class="d-flex align-items-center">
                        <span class="oi oi-check me-2" aria-hidden="true" style="color: var(--apple-green);"></span>
                        Chat AI per supporto
                    </li>
                </ul>
            </div>
        </div>
    </div>
}

@code {
    private StatisticheDto? statistiche;
    private bool isLoading = true;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await CaricaStatistiche();
    }

    private async Task CaricaStatistiche()
    {
        try
        {
            isLoading = true;
            errorMessage = null;

            var result = await StatisticheService.GetStatisticheAsync();
            if (result.IsSuccess)
            {
                statistiche = result.Value;
            }
            else
            {
                errorMessage = result.Error.Message;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Errore durante il caricamento delle statistiche: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }
}
