@page "/"
@using GameStore.Application.Services
@using GameStore.Application.DTOs
@inject IStatisticheService StatisticheService

<PageTitle>Dashboard - GameStore AI</PageTitle>

<div class="dashboard-header mb-4">
    <h1><span class="oi oi-cpu" aria-hidden="true"></span>GameStore AI Dashboard</h1>
    <p class="lead">Benvenuto nella piattaforma di gestione GameStore potenziata dall'Intelligenza Artificiale.</p>
</div>

@if (isLoading)
{
    <div class="text-center">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Caricamento statistiche...</span>
        </div>
        <p class="mt-2">Caricamento statistiche...</p>
    </div>
}
else if (errorMessage != null)
{
    <div class="alert alert-danger" role="alert">
        @errorMessage
    </div>
}
else if (statistiche != null)
{
    <!-- Statistiche Cards -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card stat-card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-uppercase">Utenti Totali</h6>
                            <h3 class="mb-0">@statistiche.TotaleUtenti</h3>
                        </div>
                        <div class="stat-icon">
                            <span class="oi oi-people" aria-hidden="true"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 mb-3">
            <div class="card stat-card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-uppercase">Giochi in Catalogo</h6>
                            <h3 class="mb-0">@statistiche.TotaleGiochi</h3>
                        </div>
                        <div class="stat-icon">
                            <span class="oi oi-monitor" aria-hidden="true"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 mb-3">
            <div class="card stat-card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-uppercase">Acquisti Totali</h6>
                            <h3 class="mb-0">@statistiche.TotaleAcquisti</h3>
                        </div>
                        <div class="stat-icon">
                            <span class="oi oi-cart" aria-hidden="true"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 mb-3">
            <div class="card stat-card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-uppercase">Recensioni</h6>
                            <h3 class="mb-0">@statistiche.TotaleRecensioni</h3>
                        </div>
                        <div class="stat-icon">
                            <span class="oi oi-star" aria-hidden="true"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistiche Dettagliate -->
    <div class="row mb-4">
        <div class="col-md-6 mb-3">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <span class="oi oi-dollar" aria-hidden="true"></span> Vendite
                    </h5>
                </div>
                <div class="card-body">
                    <h3 class="text-success">€@statistiche.ValoreVendite.ToString("N2")</h3>
                    <p class="text-muted mb-0">Valore totale delle vendite</p>
                </div>
            </div>
        </div>
        
        <div class="col-md-6 mb-3">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <span class="oi oi-star" aria-hidden="true"></span> Rating Medio
                    </h5>
                </div>
                <div class="card-body">
                    <h3 class="text-warning">@statistiche.MediaPunteggioRecensioni.ToString("F1")/5.0</h3>
                    <p class="text-muted mb-0">Punteggio medio delle recensioni</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Attività Recente -->
    <div class="row">
        <div class="col-md-6 mb-3">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <span class="oi oi-clock" aria-hidden="true"></span> Attività Ultimo Mese
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-6">
                            <h6 class="text-primary">@statistiche.AcquistiUltimoMese</h6>
                            <small class="text-muted">Nuovi Acquisti</small>
                        </div>
                        <div class="col-6">
                            <h6 class="text-warning">@statistiche.RecensioniUltimoMese</h6>
                            <small class="text-muted">Nuove Recensioni</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-6 mb-3">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <span class="oi oi-cpu" aria-hidden="true"></span> AI Assistant
                    </h5>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-2">Benvenuto nell'era dell'AI! Prossimamente:</p>
                    <ul class="list-unstyled mb-0">
                        <li><span class="oi oi-check text-success" aria-hidden="true"></span> Chat AI per supporto</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private StatisticheDto? statistiche;
    private bool isLoading = true;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await CaricaStatistiche();
    }

    private async Task CaricaStatistiche()
    {
        try
        {
            isLoading = true;
            errorMessage = null;

            var result = await StatisticheService.GetStatisticheAsync();
            if (result.IsSuccess)
            {
                statistiche = result.Value;
            }
            else
            {
                errorMessage = result.Error.Message;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Errore durante il caricamento delle statistiche: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }
}
